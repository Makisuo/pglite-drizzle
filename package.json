{
	"name": "pglite-drizzle",
	"version": "0.0.9",
	"module": "./dist/es/index.js",
	"type": "module",
	"repository": "https://github.com/Makisuo/pglite-drizzle",
	"scripts": {
		"build": "bunchee",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@electric-sql/pglite": "^0.2.15",
		"@electric-sql/pglite-react": "^0.2.15",
		"@electric-sql/pglite-sync": "^0.2.17",
		"bunchee": "^6.0.3",
		"drizzle-orm": "^0.38.2",
		"typescript": "^5.7.2",
		"vitepress": "^1.5.0"
	},
	"peerDependencies": {
		"drizzle-orm": ">=0.38.0",
		"@electric-sql/pglite": ">=0.2.15",
		"@electric-sql/pglite-react": ">=0.2.15"
	},
	"files": ["dist"],
	"main": "./dist/es/index.js",
	"types": "./dist/es/index.d.ts",
	"exports": {
		"./react": {
			"import": {
				"types": "./dist/es/react.d.ts",
				"default": "./dist/es/react.js"
			},
			"require": {
				"types": "./dist/cjs/react.d.cts",
				"default": "./dist/cjs/react.cjs"
			}
		},
		".": {
			"import": {
				"types": "./dist/es/index.d.ts",
				"default": "./dist/es/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		}
	}
}
